<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_marginLeft="3dip"
        android:layout_width="match_parent"
        android:layout_height="155dip">
    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/rl_personal_control"
        android:layout_below="@id/viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/iv_personal_left_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="15dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:paddingTop="15dip"
            android:scaleType="fitXY"
            android:src="@drawable/personal_left_arrow" />

        <ImageView
            android:id="@+id/iv_personal_left_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="15dip"
            android:layout_toRightOf="@id/iv_personal_left_arrow"
            android:background="@drawable/personal_pager_selector"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_personal_right_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="15dip"
            android:layout_toRightOf="@id/iv_personal_left_dot"
            android:background="@drawable/personal_pager_normal"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_personal_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_personal_right_dot"
            android:paddingBottom="15dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:paddingTop="15dip"
            android:scaleType="fitXY"
            android:src="@drawable/personal_right_arrow" />
    </RelativeLayout>
</RelativeLayout>